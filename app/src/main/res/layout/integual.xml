<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/display_integual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="((x^n+1)/(n+1))+C"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_functionintegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/display_integual"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter X"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/equation_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_functionintegral"
            android:layout_weight="1"
            android:text="Display Equation" />

        <Button
            android:id="@+id/submit_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_functionintegral"
            android:layout_marginTop="15dp"
            android:text="Submit_Integral" />

        <TextView
            android:id="@+id/output_integralstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/submit_int"
            android:layout_marginTop="14dp"
            android:text="Step" />
    </RelativeLayout>

</LinearLayout>
